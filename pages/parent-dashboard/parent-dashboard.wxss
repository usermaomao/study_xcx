.container {
  padding: 20rpx;
  font-size: 28rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  text-align: center;
  margin-bottom: 30rpx;
}

.add-child-section {
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
}

.input-field {
  flex-grow: 1;
  border: 1rpx solid #ccc;
  padding: 15rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.list-title {
  font-size: 32rpx;
  margin-bottom: 20rpx;
  display: block;
}

.children-list {
  border-top: 1rpx solid #eee;
}

.child-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #eee;
}

.child-name {
  font-size: 30rpx;
}

.button-group button {
  margin-left: 10rpx;
}

.empty-message {
  text-align: center;
  color: #888;
  margin-top: 50rpx;
}

.manage-content-button {
  margin-top: 40rpx;
  width: 100%;
}
