.container {
  padding: 30rpx;
  font-size: 28rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  text-align: center;
  margin-bottom: 40rpx;
}

.form-group {
  margin-bottom: 25rpx;
}

.form-group label {
  display: block;
  margin-bottom: 10rpx;
  color: #333;
}

.form-group input,
.form-group textarea {
  width: 100%;
  padding: 15rpx;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.form-group textarea {
  min-height: 100rpx; /* For auto-height to work initially */
}

button[type="primary"] {
  margin-top: 30rpx;
  width: 100%;
}
