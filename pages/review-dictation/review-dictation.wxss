.container {
  padding: 30rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  box-sizing: border-box;
}

.loading-message, .no-items, .session-complete {
  text-align: center;
  margin-top: 100rpx;
  color: #555;
}
.session-complete .complete-title {
  font-size: 40rpx;
  color: #28a745;
  margin-bottom: 20rpx;
}
.session-complete text {
  display: block;
  margin-bottom: 20rpx;
}
.session-complete button {
  margin-top: 20rpx;
  width: 60%;
}
.no-items text {
    display: block;
    margin-bottom: 10rpx;
}
.no-items button {
    margin-top: 30rpx;
}


.dictation-card {
  width: 100%;
  max-width: 700rpx; /* Max width for larger screens if any */
  background-color: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.1);
  text-align: center;
}

.progress-text {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 10rpx;
  display: block;
}

.item-type {
  font-size: 26rpx;
  color: #007bff;
  margin-bottom: 20rpx;
  display: block;
  font-weight: bold;
}

.prompt-section {
  background-color: #f8f9fa;
  padding: 25rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  min-height: 80rpx;
}

.prompt-label {
  font-size: 26rpx;
  color: #6c757d;
  margin-bottom: 10rpx;
  display: block;
}

.prompt-text {
  font-size: 34rpx;
  font-weight: bold;
  color: #343a40;
}
.prompt-text.pinyin {
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif; /* Common Pinyin fonts */
}
.prompt-text.definition {
  font-size: 28rpx;
  font-weight: normal;
  line-height: 1.5;
}
.prompt-text.word-prompt { /* If showing the word itself */
  color: #dc3545; /* A bit of warning color */
}


.input-field {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ced4da;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 32rpx;
}
.input-field:disabled {
  background-color: #e9ecef;
}

.action-button {
  width: 100%;
  margin-bottom: 20rpx;
}
.action-button:disabled {
  background-color: #6c757d; /* Bootstrap's secondary color for disabled */
  border-color: #6c757d;
  opacity: 0.65;
}


.feedback-section {
  margin-top: 30rpx;
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  background-color: #f9f9f9;
}

.feedback-text {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}
.feedback-text.correct {
  color: #28a745; /* Green for correct */
}
.feedback-text.incorrect {
  color: #dc3545; /* Red for incorrect */
}

.correct-answer-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.correct-answer-text {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.next-button {
  width: 100%;
}
